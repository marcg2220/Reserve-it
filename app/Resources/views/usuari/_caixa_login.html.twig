{% if is_granted('ROLE_USUARI') %}
    {{ include('comu/flashes.html.twig') }}

    <p>Conectat com <strong>{{ usuari.nom ~ ' ' ~ usuari.cognoms }}</strong></p>
    <a href="{{ path('usuari_perfil') }}">Veure el meu perfil</a>
    <a href="{{ path('usuari_logout') }}">Tancar sessió</a>
{% else %}
    <h2>{{ 'Accedeix al teu compte'|trans }}</h2>
    <form action="{{ path('usuari_login_check') }}" method="post">
        <label for="login_user">{{ 'Email'|trans }}</label>
        <input id="login_user" type="text" name="_username" value="{{ last_username|default('') }}" />

        <label for="login_pass">{{ 'Contrassenya'|trans }}</label>
        <input id="login_pass" type="password" name="_password" />

        <input type="submit" value="{{ 'Entrar'|trans }}" />

        <input type="checkbox" id="remember_me" name="_remember_me" checked />
        <label for="remember_me">{{ 'No tancar sessió'|trans }}</label>
    </form>
{% endif %}